---
import "@/styles/global.css";

import Footer from "@components/Footer/Footer.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import BaseHead from "@layouts/BaseHead.astro";
import Links from "@components/Links/Links.astro";

// heroImage and authorData are defined on blog posts
// authorData could also be defined on the about author page
interface Props {
	type?: "general";
	navStartStyle?: "default" | "white";
	title: string;
	description: string;
	heroImage?: ImageMetadata;
	noindex?: boolean;
}

const {
	type = "general",
	navStartStyle = "default",
	title,
	description,
	heroImage,
	noindex = false,
} = Astro.props as Props;
---

<!doctype html>
<html lang="pt" transition:animate="fade">
	<head>
		<BaseHead
			type={type}
			title={title}
			description={description}
			image={heroImage ? heroImage : undefined}
			noindex={noindex}
		/>
	</head>
	<body id="body" class="bg-white  text-base-900">
		<div class="min-h-[100lvh]">
			<nav class='flex justify-between'>
				<SiteLogo/>
				<Links />
			</nav>
			<main>
				<slot />
			</main>
		</div>
		<Footer />
	</body>
</html>
